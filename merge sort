""" ORDENAMIENTO POR MEZCLA"""
def ordenamientoPorMezcla(alist):
    print("Dividir ", alist)
    if len(alist)>1:
        mitad = len(alist)//2
        mitadizq=alist[:mitad]# Dividir los elementos del arreglo
        mitadder=alist[mitad:]# en 2 mitades
        
        ordenamientoPorMezcla(mitadizq)
        ordenamientoPorMezcla(mitadder)
        
        i=j=k=0
        
        #copiar a los arrays temp
        while i < len(mitadizq) and j < len(mitadder):
            if mitadizq[i] < mitadder[j]:
                alist[k]=mitadizq[i]
                i=i+1 
            else:
                alist[k]=mitadder[j]
                j=j+1 
            k=k+1 
        while i <len(mitadizq):
            alist[k]=mitadizq[i]
            i=1
            k=k+1 
        while j <len(mitadder):
            alis[k]=mitadder[j]
            j=j+1 
            k=k+1 
   
    print("Ordenar ", alist)
    alist = [38,27,43,3,9,82,10]
    ordenamientoPorMezcla(alist)
